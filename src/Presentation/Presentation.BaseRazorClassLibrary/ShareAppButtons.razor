@code {

    private string GetText()
        {
        var txt1 = $"{NavigationManager.AppSettings().Title} {NavigationManager.AppSettings().PublicDomainAbsoluteUrl} {NavigationManager.AppSettings().Description ?? ""}";

        var byKatthe = $"{NavigationManager.AppSettings().CompanyUrl} {NavigationManager.AppSettings().CompanTagLine} ";
        if (NavigationManager.AppSettings().PublicDomainAbsoluteUrl != NavigationManager.AppSettings().CompanyUrl)
            txt1 += $"\n by {byKatthe}";
        if (!string.IsNullOrEmpty(NavigationManager.AppSettings().AppVideoUrl))
            txt1 += $"\n More detailed information available at {NavigationManager.AppSettings().AppVideoUrl}";

        return Uri.EscapeDataString(txt1);
        }
}